    "@sinclair/typebox": "^0.34.41",
    "@types/bun": "1.3.1",
    "elysia": "1.4.15",
    "express-validator": "7.3.0",
    "firebase-admin": "13.6.0",
    "jsonwebtoken": "9.0.2",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "prisma": "6.19.0",
    "resend": "6.4.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
